<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qingmuy.item.mapper.ItemMapper">

    <update id="restoreStock">
        <foreach collection="orderDetailDTOs" item="od" separator="," open="(" close=")">
            update item
            set
                stock = stock + #{od.num}
            where
                id = #{od.itemId}
        </foreach>
    </update>
</mapper>
